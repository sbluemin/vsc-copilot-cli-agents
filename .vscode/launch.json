{
  // IntelliSense를 사용하여 가능한 특성에 대해 알아보세요.
  // 기존 특성에 대한 설명을 보려면 마우스 커서를 올려보세요.
  // https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Run Extension",
      "type": "extensionHost",
      "request": "launch",
      "args": [
        "--extensionDevelopmentPath=${workspaceFolder}",
        "--profile=dev-vsc-copilot-cli",
        "--disable-workspace-trust",
        "${workspaceFolder}/.vscode/extensionDevTestWorkspace"
      ],
      "outFiles": [
        "${workspaceFolder}/dist/**/*.js"
      ],
      "resolveSourceMapLocations": [
          "${workspaceFolder}/**",
          "!**/node_modules/**"
      ],
      "sourceMaps": true,
      "preLaunchTask": "${defaultBuildTask}"
    },
    {
      "name": "Run Code with E2E environment",
      "type": "node",
      "request": "launch",
      "runtimeExecutable": "code",
      "runtimeArgs": [
        "--extensionDevelopmentPath=${workspaceFolder}",
        "--user-data-dir=${workspaceFolder}/.vscode/.e2e-test-user-data",
        "--profile=dev-vsc-copilot-cli",
        "--disable-workspace-trust",
        "${workspaceFolder}/.vscode/extensionDevTestWorkspace"
      ]
    },
    {
      "name": "Run test E2E",
      "type": "node",
      "request": "launch",
      "runtimeExecutable": "npm",
      "runtimeArgs": [
        "run",
        "test:e2e"
      ],
      "console": "integratedTerminal",
      "skipFiles": [
        "<node_internals>/**"
      ]
    }
  ]
}
