{
  "name": "github-copilot-cli-agents",
  "displayName": "GitHub Copilot CLI Agents",
  "description": "GitHub Copilot extension for integrating multiple Code Agent CLIs",
  "preview": true,
  "version": "0.0.0-placeholder",
  "publisher": "sbluemin",
  "icon": "assets/icon.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/sbluemin/vsc-copilot-cli-agents"
  },
  "engines": {
    "vscode": "^1.107.0"
  },
  "categories": [
    "AI",
    "Chat"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "chatParticipants": [
      {
        "id": "copilot-cli-agents.gemini",
        "fullName": "Gemini",
        "name": "gemini",
        "description": "Google Gemini AI Assistant",
        "isSticky": true,
        "commands": [
          {
            "name": "doctor",
            "description": "Check Gemini CLI installation status"
          },
          {
            "name": "session",
            "description": "Show current chat session ID"
          },
          {
            "name": "handoff",
            "description": "Open interactive CLI terminal with current session"
          },
          {
            "name": "passAgent",
            "description": "Pass Custom Agent mode instructions to CLI"
          }
        ]
      },
      {
        "id": "copilot-cli-agents.claude",
        "fullName": "Claude",
        "name": "claude",
        "description": "Anthropic Claude AI Assistant",
        "isSticky": true,
        "commands": [
          {
            "name": "doctor",
            "description": "Check Claude CLI installation status"
          },
          {
            "name": "session",
            "description": "Show current chat session ID"
          },
          {
            "name": "handoff",
            "description": "Open interactive CLI terminal with current session"
          },
          {
            "name": "passAgent",
            "description": "Pass Custom Agent mode instructions to CLI"
          }
        ]
      }
    ],
    "commands": [
      {
        "command": "copilot-cli-agents.scaffold-llm",
        "title": "Scaffold Code Agents",
        "category": "GitHub Copilot CLI Agents"
      }
    ],
    "configuration": {
      "title": "GitHub Copilot CLI Agents",
      "properties": {
        "CCA.gemini.model": {
          "type": "string",
          "enum": [
            "gemini-3-pro-preview",
            "gemini-3-flash-preview",
            "gemini-2.5-pro",
            "gemini-2.5-flash"
          ],
          "default": "gemini-3-flash-preview",
          "description": "Select the model for Gemini CLI."
        },
        "CCA.claude.model": {
          "type": "string",
          "enum": [
            "haiku",
            "sonnet",
            "opus"
          ],
          "default": "haiku",
          "description": "Select the model for Claude CLI."
        },
        "CCA.claude.allowedTools": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": [
            "WebSearch",
            "WebFetch",
            "Bash"
          ],
          "markdownDescription": "List of tools available for Claude CLI. Examples: `WebSearch`, `WebFetch`, `Bash`, `Edit`."
        },
        "CCA.gemini.allowedTools": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": [
            "google_web_search",
            "web_fetch",
            "run_shell_command"
          ],
          "markdownDescription": "List of tools available for Gemini CLI. Examples: `google_web_search`, `web_fetch`, `run_shell_command`."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "package": "mkdir -p out && vsce package --out out/",
    "publish": "vsce publish"
  },
  "devDependencies": {
    "@types/node": "^22.19.3",
    "@types/vscode": "^1.107.0",
    "@vscode/vsce": "^2.12.0",
    "typescript": "^5.9.3"
  }
}
