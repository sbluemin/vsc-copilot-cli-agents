{
  "name": "github-copilot-cli-agents",
  "displayName": "GitHub Copilot CLI Agents",
  "description": "GitHub Copilot extension for integrating multiple Code Agent CLIs",
  "preview": true,
  "version": "0.0.0-placeholder",
  "publisher": "sbluemin",
  "icon": "assets/icon.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/sbluemin/vsc-copilot-cli-agents"
  },
  "engines": {
    "vscode": "^1.107.0"
  },
  "categories": [
    "AI",
    "Chat"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "chatParticipants": [
      {
        "id": "copilot-cli-agents.gemini",
        "fullName": "Gemini",
        "name": "gemini",
        "description": "Google Gemini AI Assistant",
        "isSticky": true,
        "commands": [
          {
            "name": "doctor",
            "description": "Check Gemini CLI installation status"
          },
          {
            "name": "session",
            "description": "Show current chat session ID"
          },
          {
            "name": "handoff",
            "description": "Open interactive CLI terminal with current session"
          }
        ]
      },
      {
        "id": "copilot-cli-agents.claude",
        "fullName": "Claude",
        "name": "claude",
        "description": "Anthropic Claude AI Assistant",
        "isSticky": true,
        "commands": [
          {
            "name": "doctor",
            "description": "Check Claude CLI installation status"
          },
          {
            "name": "session",
            "description": "Show current chat session ID"
          },
          {
            "name": "handoff",
            "description": "Open interactive CLI terminal with current session"
          }
        ]
      },
      {
        "id": "copilot-cli-agents.codex",
        "fullName": "Codex",
        "name": "codex",
        "description": "OpenAI Codex AI Assistant",
        "isSticky": true,
        "commands": [
          {
            "name": "doctor",
            "description": "Check Codex CLI installation status"
          },
          {
            "name": "session",
            "description": "Show current chat session ID"
          },
          {
            "name": "handoff",
            "description": "Open interactive CLI terminal with current session"
          }
        ]
      }
    ],
    "commands": [
      {
        "command": "copilot-cli-agents.scaffold-llm",
        "title": "Scaffold Code Agents",
        "category": "GitHub Copilot CLI Agents"
      }
    ],
    "configuration": {
      "title": "GitHub Copilot CLI Agents",
      "properties": {
        "CCA.gemini.model": {
          "type": "string",
          "enum": [
            "gemini-3-pro-preview",
            "gemini-3-flash-preview",
            "gemini-2.5-pro",
            "gemini-2.5-flash"
          ],
          "default": "gemini-3-flash-preview",
          "description": "Select the model for Gemini CLI."
        },
        "CCA.claude.model": {
          "type": "string",
          "enum": [
            "haiku",
            "sonnet",
            "opus"
          ],
          "default": "haiku",
          "description": "Select the model for Claude CLI."
        },
        "CCA.claude.useWebSearch": {
          "type": "boolean",
          "default": false,
          "description": "Enable web search capability for Claude CLI."
        },
        "CCA.codex.model": {
          "type": "string",
          "enum": [
            "gpt-5.2-codex",
            "gpt-5.1-codex-max",
            "gpt-5.1-codex-mini",
            "gpt-5.2"
          ],
          "default": "gpt-5.2-codex",
          "description": "Select the model for Codex CLI."
        },
        "CCA.codex.reasoningEffort": {
          "type": "string",
          "enum": [
            "low",
            "medium",
            "high",
            "xhigh"
          ],
          "default": "low",
          "description": "Select the reasoning effort level for Codex CLI."
        },
        "CCA.codex.useWebSearch": {
          "type": "boolean",
          "default": false,
          "description": "Enable web search capability for Codex CLI."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "package": "mkdir -p out && vsce package --out out/",
    "publish": "vsce publish",
    "test:e2e": "playwright test --config=tests/playwright.config.ts --headed",
    "test:e2e:headless": "playwright test --config=tests/playwright.config.ts",
    "test:e2e:debug": "playwright test --config=tests/playwright.config.ts --debug"
  },
  "devDependencies": {
    "@playwright/test": "^1.57.0",
    "@types/node": "^22.19.3",
    "@types/vscode": "^1.107.0",
    "@vscode/vsce": "^2.12.0",
    "playwright": "^1.57.0",
    "typescript": "^5.9.3"
  }
}
